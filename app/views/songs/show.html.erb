<% if logged_in? %>
	<% if current_user.admin %>
		<% if @cute_votes >= 5 %>
			Cute has at least 5 votes.
		<% elsif @joyful_votes >= 5 %>
			Joyful has at least 5 votes.
		<% elsif @melancholic_votes >= 5 %>
			Melancholic has at least 5 votes.
		<% elsif @psyched_votes >= 5 %>
			Psyched has at least 5 votes.
		<% elsif @serene_votes >= 5 %>
			Serene has at least 5 votes.
		<% end %>
	<% end %>
<% end %>

<%=raw YouTubeAddy.youtube_embed_url(@song.youtube_url, 1280, 720) %><br><br>
<div class="song_info">
	<h2 id="song_title" data-cat=<%= @category.id %>><%= @song.name %><br></h2>
	by <%= @song.artist %><br>
	<%= @song.description %><br>
	<% if logged_in? %>
		<div class="button_container">
			<% if current_user == @song.user || current_user.admin %>
				<%= link_to "Edit Song", edit_song_path(@song), class: "cool_button" %>
			<% end %>
			<% if !@favorite %>
				<%= link_to "Favorite", favorites_path(song_id: @song.id), method: :post, class: "cool_button" %>
			<% else %>
				<%= link_to "Unfavorite", favorite_path(@favorite.id), method: :delete, class: "cool_button" %>
			<% end %>
		</div>
	<% end %>
</div>

<% if logged_in? %>
	<div id="vote_wrapper">
		<% @categories.each do |category| %>
			<%= form_for Vote.new do |f| %>
				<%= f.hidden_field :category_id , value: category.id %>
				<%= f.hidden_field :song_id, value: @song.id %>
				<%= image_submit_tag("#{category.mood}.png") %>
			<% end %>
		<% end %>
	</div>
	<% if current_user.admin %>
		<div class="button_container">
			<%= link_to "Clear Votes", clear_all_path(@song), class: "cool_button" %>
		</div>
	<% end %>

	<div class="comment_form">
		<%= form_for Comment.new do |f| %>
			<%= f.text_area :body, :cols => 50, :rows => 10 %><br><br>
			<%= f.hidden_field :user_id, value: current_user.id %>
			<%= f.hidden_field :song_id, value: @song.id %>
			<%= f.submit "Submit", class: "cool_button" %>
		<% end %>
	</div>
<% end %>

<% if @song.comments %>
	<% @comments.reverse.each do |comment| %>
		<div class="comment_container">
			<%= link_to comment.user.username, user_path(comment.user) %><br>
			<%= comment.body %><br>
			<% if current_user == @comment.user || current_user.admin %>
				<div class="button_container">
					<%= link_to "Delete", comment_path(comment), method: :delete, class: "cool_button" %>
				</div>
			<% end %>
		</div>
	<% end %>
<% end %>