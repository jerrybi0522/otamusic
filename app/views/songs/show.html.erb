<% if logged_in? %>
	<% if current_user.admin %>
		<% if @cute_votes >= 5 %>
			Cute has at least 5 votes.
		<% elsif @joyful_votes >= 5 %>
			Joyful has at least 5 votes.
		<% elsif @melancholic_votes >= 5 %>
			Melancholic has at least 5 votes.
		<% elsif @psyched_votes >= 5 %>
			Psyched has at least 5 votes.
		<% elsif @serene_votes >= 5 %>
			Serene has at least 5 votes.
		<% end %>
	<% end %>
<% end %>

<%=raw YouTubeAddy.youtube_embed_url(@song.youtube_url, 420, 315) %>
<%= @song.name %>
by <%= @song.artist %>
<%= @song.description %>
<% if logged_in? %>
	<% if current_user == @song.user || current_user.admin %>
		<%= link_to "Edit Song", edit_song_path(@song) %>
	<% end %>
	<% if !@favorite %>
		<%= button_to "Favorite", favorites_path(song_id: @song.id), method: :post %>
	<% else %>
		<%= button_to "Unfavorite", favorite_path(@favorite.id), method: :delete %>
	<% end %>
<% end %>

<% if logged_in? %>
	<% @categories.each do |category| %>
		<%= form_for Vote.new do |f| %>
			<%= f.hidden_field :category_id , value: category.id %>
			<%= f.hidden_field :song_id, value: @song.id %>
			<%= f.submit %>
		<% end %>
	<% end %>
	<% if current_user.admin %>
		<%= button_to "Clear Votes", clear_all_path(@song) %>
	<% end %>

	<%= form_for Comment.new do |f| %>
		<%= f.text_area :body, :cols => 50, :rows => 10 %>
		<%= f.hidden_field :user_id, value: current_user.id %>
		<%= f.hidden_field :song_id, value: @song.id %>
		<%= f.submit %>
	<% end %>
<% end %>

<% if @song.comments %>
	<% @comments.reverse.each do |comment| %>
		<%= link_to comment.user.username, user_path(comment.user) %><br>
		<%= comment.body %><br>
		<% if current_user == @comment.user || current_user.admin %>
			<%= button_to "Delete", comment_path(comment), method: :delete %>
		<% end %>
	<% end %>
<% end %>