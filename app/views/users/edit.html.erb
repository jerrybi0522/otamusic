<h2>Edit User</h2>
<br><br>
<!-- Allows for editing of user -->
<%= form_for @user do |f| %>
	<%=f.text_field :username, :value => @user.username, placeholder: "Username", class: "type_field" %><br><br>

	<%=f.password_field :password, :value => @user.password, placeholder: "Password", class: "type_field" %><br><br>

	<%=f.password_field :password_confirmation, placeholder: "Re-enter Password", class: "type_field" %><br><br>

	<%=f.text_field :email, :value => @user.email, placeholder: "Email", class: "type_field" %><br><br>

	<%=f.submit "Edit", class: "cool_button" %>
<% end %>
<br>
<div class="button_container">
	<!-- Allows for deletion of user -->
	<%= link_to "Delete User", user_path(@user), method: :delete, class: "cool_button" %>
</div>